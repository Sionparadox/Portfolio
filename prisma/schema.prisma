generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model Project {
  id            String    @id @default(cuid())
  slug          String    @unique
  title         String
  overview      String    @db.Text
  description   String    @db.Text
  category      String    // Web, Mobile등 구분
  thumbnail     String
  
  contributions String[]  // What I Did (배열 형태)
  insights      String[]  // What I Learned (배열 형태)
  
  techStack     String[]
  teamSize      Int       @default(1)
  role          String?
  
  startDate     DateTime
  endDate       DateTime?
  
  github        String?
  link          String?
  
  featured      Boolean   @default(false)
  order         Int       @default(0)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}


model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}


model Timeline {
  id           String   @id @default(cuid())
  type         String   // 'experience', 'education', 'certifications'
  date         String   
  year         String   
  place        String   
  title        String   
  descriptions String[]
  image        String   // 이미지 경로 (예: "/img/timeline/school.png")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}